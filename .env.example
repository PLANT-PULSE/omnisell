# SellFlow Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# DJANGO SETTINGS (Required)
# =============================================================================
DJANGO_SECRET_KEY=your-super-secret-key-change-in-production
DJANGO_DEBUG=False

# =============================================================================
# DATABASE (Optional - uses SQLite by default)
# =============================================================================
# For PostgreSQL on Render:
# DATABASE_URL=postgresql://username:password@host:port/database_name
# Example for Render: postgres://username:password@dpg-xxx.render.internal:5432/database_name

# =============================================================================
# PAYMENT GATEWAYS (Optional)
# =============================================================================
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Paystack (African payments)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# Razorpay (Indian payments)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# =============================================================================
# AI FEATURES (Optional)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key

# =============================================================================
# SOCIAL MEDIA APIs (Optional)
# =============================================================================
# Facebook/Instagram Graph API
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_ACCESS_TOKEN=your_access_token

# Twitter/X API
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_bearer_token

# WhatsApp Business API
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Alternative: Use SendGrid
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587

# =============================================================================
# FILE STORAGE (Optional)
# =============================================================================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# =============================================================================
# CORS - Frontend URLs (Update for production)
# =============================================================================
# Add your Netlify frontend URL here
CORS_ORIGIN_WHITELIST=http://localhost:3000,http://localhost:5173
